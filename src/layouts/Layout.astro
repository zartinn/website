---
import { ViewTransitions } from 'astro:transitions';
import { Header } from '../components';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="text-html-default" transition:animate="none">
	<head>
		<script data-astro="raw">
			const getTheme = () => localStorage.getItem("theme") || "light";
			const setTheme = (theme) => document.documentElement.setAttribute("theme", theme);
			setTheme(getTheme());

			window.addEventListener("DOMContentLoaded", () => setTheme(getTheme()));
			document.addEventListener("astro:after-swap", () => setTheme(getTheme()));
		</script>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preload" href="/assets/fonts/GT-America-Standard-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions fallback="none" />
	</head>
	<body class="bg-bg-primary">
		<slot />
	</body>
</html>

<style is:global>
    @font-face {
        font-family: 'GT Americano';
        src: url('/assets/fonts/GT-America-Standard-Regular.woff2') format('woff2'),
            url('/assets/fonts/GT-America-Standard-Regular.woff') format('woff');
    }
</style>

<style is:global>
	:root {
		--light-primary: #FFFDF9;
		--light-secondary: #FFFDF9;
		--light-shadow: rgb(255 253 249 / 0.4);
		--dark-primary: #1E1E1E;
		--dark-secondard: #1E1E1E;
		--dark-shadow: rgb(30 30 30 / 0.4);
		--primary-clr-light: #1990ff;
		--primary-clr-dark: #8AC7FF;

		--fg-primary: var(--light-primary);
		--fg-shadow: var(--light-shadow);
		--bg-primary: var(--dark-primary);
		--clr-primary: var(--primary-clr-dark);
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--fg-primary: var(--light-primary);
			--fg-shadow: var(--light-shadow);
			--bg-primary: var(--dark-primary);
			--clr-primary: var(--primary-clr-dark);
			color-scheme: dark;
		}
	}

	:root[theme="dark"] {
		--fg-primary: var(--light-primary);
		--fg-shadow: var(--light-shadow);
		--bg-primary: var(--dark-primary);
		--clr-primary: var(--primary-clr-dark);
		color-scheme: dark;
	}
	:root[theme="light"] {
		--fg-primary: var(--dark-primary);
		--fg-shadow: var(--dark-shadow);
		--bg-primary: var(--light-primary);
		--clr-primary: var(--primary-clr-light);
		color-scheme: light;
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
	}
	* {
		transition: background-color 300ms, color 300ms;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
