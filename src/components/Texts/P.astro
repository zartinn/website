---
import Text from './Text.astro';
import { getTextProps } from '../../utils/helper';

interface Props {
	className?: string;
	transitionName?: string;
	small?: string;
}

const { className, transitionName, small } = Astro.props;
const textProps = getTextProps('p', className, small );
---

<Text
	type={textProps.type}
	className={textProps.className}
	transitionName={transitionName}
>
	<slot/>
</Text>
