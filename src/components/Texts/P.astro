---
import Text from './Text.astro';
import { getTextProps } from '../../utils/helper';

interface Props {
	className?: string;
	transitionName?: string;
	type?: 'default' | 'xl' | 'small';
}

const { className, transitionName, type = 'default' } = Astro.props;
const textProps = getTextProps('p', className, type );
---

<Text
	type={textProps.type}
	className={`${textProps.className}`}
	transitionName={transitionName}
>
	<slot/>
</Text>
