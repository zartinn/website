---
import Text from './Text.astro';
import { getTextProps } from '../../utils/helper';

interface Props {
	className?: string;
	transitionName?: string;
}

const { className, transitionName } = Astro.props;
const textProps = getTextProps('h1', className);
---

<Text
	type={textProps.type}
	className={textProps.className}
	transitionName={transitionName}
>
	<slot/>
</Text>
