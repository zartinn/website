---
interface Props {
	className?: string;
	transitionName?: string;
    type: 'h1' | 'h2' | 'h3' | 'p'
}

const { className = '', type, transitionName } = Astro.props;

const TextEl = type;
---
{
	transitionName ?
		<TextEl
			class={`font-americano text-light-bg-p ${className}`}
			transition:name={transitionName}
			transition:animate="none"
		>
			<slot/>
		</TextEl>
	:
		<TextEl class={`font-americano text-light-bg-p ${className}`}>
			<slot/>
		</TextEl>

}
