---
interface Props {
    className?: string;
}

const {className = '' } = Astro.props;

---

<svg
    role="button"
    aria-label="go back"
    viewBox="0 0 24 24"
    fill="var(--fg-primary)"
    class={`${className} border-2 border-fg-primary shadow-md p-1 h-16 transition-transform hover:scale-105 z-10 rounded-full cursor-pointer`}
    xmlns="http://www.w3.org/2000/svg"
    id="back-icon"
>
    <path d="M12,9H9V7a1,1,0,0,0-.62-.92,1,1,0,0,0-1.09.21l-3,3a1,1,0,0,0,0,1.42l3,3A1,1,0,0,0,8,14a.84.84,0,0,0,.38-.08A1,1,0,0,0,9,13V11h3a6,6,0,0,1,6,6,1,1,0,0,0,2,0A8,8,0,0,0,12,9Z"/>
</svg>


<script>
    const goBackListener = () => {
        const backIcon = document.getElementById('back-icon');
        backIcon?.addEventListener('click', () => {
            window.history.back();
        })
    }
    
    window.addEventListener("DOMContentLoaded", () => goBackListener());
    document.addEventListener("astro:after-swap", () => goBackListener());
</script>