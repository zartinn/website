---
import { colorMap } from '../../utils/helper';


interface Props {
	backgroundColor?: 'primary' | 'secondary';
    className?: string,
    paddingClass?: string
}
const { backgroundColor = 'primary', className = '', paddingClass = 'p-8 desktop:p-20'} = Astro.props;


let bgColorClass = colorMap.background[backgroundColor];
---

<section
    class={`w-screen min-h-section ${paddingClass} flex flex-col desktop:flex-row justify-center overflow-hidden relative items-center gap-12 desktop:gap-40 ${bgColorClass} ${className}`}
>
    <slot />
</section>