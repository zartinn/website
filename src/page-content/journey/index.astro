---
import { ContentContainer, H2, Header, P, Section } from '../../components';
import Layout from '../../layouts/Layout.astro';
import image from '../../assets/images/cards/journey.png';
import type { Translations } from '../../utils/typings';
import { IntroSection } from '../../sections';


interface Props {
  T: Translations['JOURNEY']
}

const { T } = Astro.props;


---

<Layout title="Journey - Career Path and Milestones">
	  <!-- <Header page="journey"/> -->
    <main transition:name="journey">
      <IntroSection
        id="journey",
        image={image}
        title={T.TITLE}
        description={T.DESCRIPTION}
      />
  
      <!-- Section: Early Career -->
      <Section>
        <ContentContainer singleContainer>
          <H2>Early Career</H2>
          <P>Highlights from the initial stages of my professional journey.</P>
          <!-- Content detailing early career experiences here -->
        </ContentContainer>
      </Section>
  
      <!-- Section: Mid-Career -->
      <Section>
        <ContentContainer singleContainer>
          <H2>Mid-Career</H2>
          <P>Significant experiences and accomplishments from the mid-stage of my career.</P>
          <!-- Content detailing mid-career milestones here -->
        </ContentContainer>
      </Section>
  
      <!-- Section: Recent Activities -->
      <Section>
        <ContentContainer singleContainer>
          <H2>Recent Activities</H2>
          <P>Current engagements and projects that demonstrate my evolving skill set.</P>
          <!-- Content detailing recent activities and current projects here -->
        </ContentContainer>
      </Section>
  
      <!-- Section: Future Goals -->
      <Section>
        <ContentContainer singleContainer>
          <H2>Future Goals</H2>
          <P>Anticipated next steps and objectives for ongoing professional growth.</P>
          <!-- Content detailing future career goals here -->
        </ContentContainer>
      </Section>
    </main>
</Layout>