---
import Layout from '../../layouts/Layout.astro';
import { ContentContainer, H2, Header, P, Section } from '../../components';
import { Image } from 'astro:assets';
import craft from '../../assets/images/cards/craft.png';
import type { Translations } from '../../utils/typings';

interface Props {
  T: Translations['CRAFT']
}

const { T } = Astro.props;

---

<Layout title="Craft - My Expertise">
  <Header page="craft"/>
  <!-- <main transition:name="craft" transition:animate="initial"> -->
  <main transition:name="craft">
    
    <Section>
      <Image
        src={craft} 
        alt="craft background image"
        class="w-full h-full object-cover absolute opacity-30"
				transition:name="craft-image"
      />
      <ContentContainer singleContainer>
        <h3 class="text-h1 text-fg-primary" transition:name="craft-title">{T.TITLE}</h3>
        <!-- <H2 className="text-h1 text-fg-primary" transitionName="craft-title">Craft</H2> -->
        <P transitionName="craft-description">{T.DESCRIPTION}</P>
      </ContentContainer>
    </Section>

    <!-- Skills Section -->
    <Section>
      <ContentContainer singleContainer>
        <H2>Skills</H2>
        <ul>
          <li>Backend Development</li>
          <li>Frontend Development</li>
          <li>DevOps</li>
          <!-- Add more as needed -->
        </ul>
      </ContentContainer>
    </Section>

    <!-- Technologies Section -->
    <Section>
      <ContentContainer singleContainer>
        <H2>Technologies</H2>
        <ul>
          <li>JavaScript</li>
          <li>Python</li>
          <li>Docker</li>
          <!-- Add more as needed -->
        </ul>
      </ContentContainer>
    </Section>

    <!-- Certifications Section -->
    <Section>
      <ContentContainer singleContainer>
        <H2>Certifications</H2>
        <ul>
          <li>AWS Certified Solutions Architect</li>
          <li>Google Cloud Professional Cloud Architect</li>
          <!-- Add more as needed -->
        </ul>
      </ContentContainer>
    </Section>
  </main>
</Layout>