---
import { Carousel, ContentContainer, H2, P, Section } from '../../components';
import { IntroSection } from '../../sections';
import Layout from '../../layouts/Layout.astro';
import image from '../../assets/images/cards/feats_wide.png';
import type { Translations } from '../../utils/typings';

interface Props {
  T: Translations['FEATS']
}

const { T } = Astro.props;

---

<Layout title="Feats - Professional Accomplishments">
  <main transition:name="feats" class="flex-grow">
    <IntroSection
      id="feats",
      image={image}
      title={T.TITLE}
      description={T.DESCRIPTION_LONG}
    />
    { T.FEATS.map((feat, idx) => (
      <Section backgroundColor={idx % 2 === 0 ? 'secondary' : 'primary'}>
        <ContentContainer singleContainer className="gap-10 max-w-4xl">
          <H2><span class="text-clr-primary">{feat.TITLE_PREFIX}</span><br><span class="text-h3">{feat.TITLE}</span></H2>
          <P>{feat.DESCRIPTION}</P>
          <Carousel slides={feat.SLIDES}/>
        </ContentContainer>
      </Section>
    ))}
  </main>
</Layout>