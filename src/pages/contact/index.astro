---
import { ContentContainer, H1, H2, Header, P, Section } from '../../components';
import Layout from '../../layouts/Layout.astro';

---

<Layout title="Contact - Get in Touch">
  <Header page="contact"/>
  <main>
    <Section>
      <ContentContainer singleContainer>
        <H1 transitionName="contact">Contact</H1>
        <P>If you're interested in collaborating or just want to say hello, feel free to reach out.</P>
      </ContentContainer>
    </Section>

    <!-- Contact Form -->
    <Section>
      <ContentContainer singleContainer>
        <H2>Contact Form</H2>
        <form class="flex flex-col gap-8" action="/submit-form" method="post">
          <div class="flex flex-col">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
          </div>
  
          <div class="flex flex-col">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
          </div>
  
          <div class="flex flex-col">
            <label for="subject">Subject:</label>
            <input type="text" id="subject" name="subject">
          </div>
  
          <div class="flex flex-col">
            <label for="message">Message:</label>
            <textarea id="message" name="message" rows="5" required></textarea>
          </div>
  
          <button>Send</button>
        </form>
      </ContentContainer>
    </Section>
  </main>
</Layout>